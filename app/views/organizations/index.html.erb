<p id="notice"><%= notice %></p>

<h1><%= t(:organizations) %></h1>

<%= link_to t(:new_organization), new_organization_path, class: 'btn btn-primary pull-right' %>
<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th><%= t :label_name %></th>
      <th><%= t :label_address %></th>
      <th><%= t :label_note %></th>
      <th><%= t :label_contact %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @organizations.any? %>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.address_id %></td>
        <td><%= organization.note %></td>
        <td><%= organization.contact_id %></td>
        <td><%= show_link organization %></td>
        <td><%= edit_link edit_organization_path(organization) %></td>
        <td><%= delete_link organization %></td>
      </tr>
    <% end %>
    <% else %>
    <tr align="center">
      <td colspan="11"><%= t('label_no_data') %></td>
    </tr>
    <% end %>

  </tbody>
</table>
