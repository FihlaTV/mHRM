<%= form_for(core_demographic, html: { class: 'form-horizontal' }) do |f| %>
    <% if core_demographic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(core_demographic.errors.count, "error") %> prohibited this core_demographic from being saved:</h2>

          <ul>
            <% core_demographic.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <fieldset>
      <legend>Profile edit</legend>

      <% if controller_name == "registrations" %>
          <%= f.hidden_field :user_id %>
      <% else %>
          <div class="form-group">
            <%= f.label :user_id, class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.select :user_id,options_for_select(User.pluck(:login, :id), selected: core_demographic.user_id), {} ,{class: 'form-control'} %>
            </div>
          </div>
      <% end %>


      <div class="form-group">
        <%= f.label t('profile.first_name'), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :first_name, placeholder: 'First name', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('profile.middle_name'), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :middle_name, placeholder: 'Middle name', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('profile.last_name'), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-2 control-label"><%= t('profile.gender') %></label>
        <div class="col-md-9">
          <%= f.select :gender_id, options_for_select(Gender.gender_for_select, selected: core_demographic.gender_id), {},{class: 'form-control'} %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label"><%= t('profile.birthday') %></label>
        <div class="col-md-9">
          <%= f.text_field :birth_date, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label"><%= t('profile.religion') %></label>
        <div class="col-md-9">
          <%= f.select :religion_id, options_for_select(ReligionType.select(:name, :id), selected: core_demographic.religion_id) , {},{class: 'form-control'} %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label"><%= t('label_note') %></label>
        <div class="col-md-9">
          <%= f.text_area :note, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group" >
        <div class="col-md-11">
          <%= f.submit t(:button_save), class: 'btn btn-primary pull-right' %>
        </div>
      </div>
    </fieldset>

<% end %>

<script>
  $(document).ready(function(){
    $('#core_demographic_birth_date').datepicker({ dateFormat: 'dd-mm-yy' })
  })
</script>
