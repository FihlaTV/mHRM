<%= link_to 'Delete',  contact_path(@contact), class: 'btn btn-danger pull-right',
            :method => :delete,
            :data => {:confirm => t(:text_are_you_sure)}
%>
<%= link_to 'Edit', edit_contact_path(@contact), class: 'btn btn-success pull-right' %>

<div class="col-xs-12">
  <p>
    <strong>Emergency contact:</strong>
    <%= @contact.emergency_contact %>
  </p>


  <p>
    <strong>First name:</strong>
    <%= @contact.first_name %>
  </p>

  <p>
    <strong>Middle name:</strong>
    <%= @contact.middle_name %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= @contact.last_name %>
  </p>

  <p>
    <strong>Note:</strong>
    <%= @contact.note %>
  </p>

  <%= render_extend_demography_information(@contact.contact_extend_demography) %>
</div>
