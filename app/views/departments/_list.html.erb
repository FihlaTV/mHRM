<table class="table table-responsive table-bordered">
  <thead>
  <tr>
    <th>Department Type</th>
    <th>Organization</th>
    <th>Note</th>
    <th>Date start</th>
    <th>Date end</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% if departments.any? %>
      <% departments.each do |department| %>
          <tr>
            <td><%= link_to department.department_type, department %></td>
            <td><%= department.organization %></td>
            <td><%= department.note %></td>
            <td><%= department.date_start %></td>
            <td><%= department.date_end %></td>
            <td><%= edit_link( edit_department_path(department)) if department.can?(:edit_departments, :manage_departments) %></td>
            <td><%= delete_link( department) if department.can?(:delete_departments, :manage_departments) %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>